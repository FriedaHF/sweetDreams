<video autoplay muted loop id="background-video">
  <source src="/assets/video/sheetVideo.mp4" type="video/mp4" />
</video>
<section class="forms-section" id="logForm">
  <div class="forms">
    <div class="form-wrapper is-active">
      <button type="button" class="switcher switcher-login">
        Login
        <span class="underline"></span>
      </button>
      <form class="form form-login">
        <fieldset>
          <legend>Please, enter your email, password.</legend>
          <div class="input-block">
            <label for="login-email">E-mail</label>
            <input id="email-login" type="email" required />
          </div>
          <div class="input-block">
            <label for="login-password">Password</label>
            <input id="password-login" type="password" required />
          </div>
        </fieldset>
        <button type="submit" class="form-btn btn-login">Login</button>
      </form>
    </div>
    <div class="form-wrapper">
      <button type="button" class="switcher switcher-signup">
        Sign Up
        <span class="underline"></span>
      </button>
      <form class="form form-signup">
        <fieldset>
          <legend>
            Please, enter your email, password and password confirmation for
            sign up.
          </legend>
            <div class="input-block">
            <label for="name-signup">Name</label>
            <input id="name-signup" type="text" required />
          </div>
          <div class="input-block">
            <label for="email-signup">E-mail</label>
            <input id="email-signup" type="email" required />
          </div>
          <div class="input-block">
            <label for="password-signup">Password</label>
            <input id="password-signup" type="password" required />
          </div>
         </fieldset>
        <button type="submit" class="btn-signup">Sign Up</button>
        <!-- <span class="form-btn btn-signup"><a href="#"></a></span> -->
      </form>
    </div>
  </div>
</section>


